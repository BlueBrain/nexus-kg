{
  "@context": "https://bluebrain.github.io/nexus/contexts/shacl",
  "@id": "https://bluebrain.github.io/nexus/schemas/cross-project-resolver",
  "@type": "nxv:Schema",
  "shapes": [
    {
      "@id": "this:CrossProjectResolverShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNodeOrIRI",
      "targetClass": [
        "nxv:Resolver",
        "nxv:CrossProject"
      ],
      "sh:closed": true,
      "property": [
        {
          "path": "nxv:priority",
          "name": "Priority",
          "description": "The priority of the resolver.",
          "datatype": "xsd:integer",
          "minInclusive": 1,
          "maxCount": 1
        },
        {
          "path": "nxv:resourceTypes",
          "name": "Resource types",
          "description": "The resource types that are to be applied for this resolver.",
          "nodeKind": "sh:IRI",
          "minCount": 0
        },
        {
          "path": "nxv:projects",
          "name": "Project UID",
          "description": "The project UUID",
          "datatype": "xsd:string",
          "minCount": 1
        },
        {
          "path": "nxv:identities",
          "name": "Identities",
          "description": "The identities used to enforce security into this resolver.",
          "or": [
            {
              "node": "this:UserRefIdentityShape"
            },
            {
              "node": "this:GroupRefIdentityShape"
            },
            {
              "node": "this:AuthenticatedRefIdentityShape"
            },
            {
              "node": "this:AnonymousIdentityShape"
            }
          ]
        }
      ]
    },
    {
      "@id": "this:UserRefIdentityShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNode",
      "targetClass": "nxv:UserRef",
      "sh:closed": true,
      "property": [
        {
          "path": "nxv:realm",
          "name": "Realm",
          "description": "The OIDC Provider realm.",
          "datatype": "xsd:string",
          "minInclusive": 1,
          "maxCount": 1
        },
        {
          "path": "nxv:sub",
          "name": "Subject",
          "description": "The OIDC Provider subject.",
          "datatype": "xsd:string",
          "minInclusive": 1,
          "maxCount": 1
        }
      ]
    },
    {
      "@id": "this:GroupRefIdentityShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNode",
      "targetClass": "nxv:GroupRef",
      "sh:closed": true,
      "property": [
        {
          "path": "nxv:realm",
          "name": "Realm",
          "description": "The OIDC Provider realm.",
          "datatype": "xsd:string",
          "minInclusive": 1,
          "maxCount": 1
        },
        {
          "path": "nxv:group",
          "name": "Group",
          "description": "The OIDC Provider group.",
          "datatype": "xsd:string",
          "minInclusive": 1,
          "maxCount": 1
        }
      ]
    },
    {
      "@id": "this:AuthenticatedRefIdentityShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNode",
      "targetClass": "nxv:AuthenticatedRef",
      "sh:closed": true,
      "property": [
        {
          "path": "nxv:realm",
          "name": "Realm",
          "description": "The OIDC Provider realm.",
          "datatype": "xsd:string",
          "minInclusive": 0,
          "maxCount": 1
        }
      ]
    },
    {
      "@id": "this:AnonymousIdentityShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNode",
      "targetClass": "nxv:Anonymous",
      "sh:closed": true
    }
  ]
}