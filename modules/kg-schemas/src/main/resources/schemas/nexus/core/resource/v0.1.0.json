{
  "@context": [
    "{{base}}/contexts/nexus/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/nexus/core/resource/v0.1.0/shapes/"
    }
  ],
  "@type": "owl:Ontology",
  "shapes": [
    {
      "@id": "this:ResourceShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNodeOrIRI",
      "label": "A shape definition for a resource (e.g. instance, schema) in Nexus",
      "comment": "A Nexus resource may have a corresponding type (e.g. nxv:Schema for a schema and nxv:Instance for an instance) and/or may have specific properties (e.g. nxv:rev, nxv:deprecated).",
      "property": [
        "this:RevisionPropertyShape",
        "this:DeprecatedPropertyShape",
        "this:LinksPropertyShape"
      ]
    },
    {
      "@id": "this:RevisionPropertyShape",
      "@type": "sh:PropertyShape",
      "path":"nxv:rev",
      "name": "Revision number",
      "description": "The revision number of a resource",
      "datatype": "xsd:integer",
      "minInclusive":1,
      "maxCount":1
    },
    {
      "@id": "this:DeprecatedPropertyShape",
      "@type": "sh:PropertyShape",
      "path": "nxv:deprecated",
      "name": "Deprecated",
      "description": "A boolean tag indicating whether the resource is deprecated or not.",
      "datatype": "xsd:boolean",
      "maxCount": 1
    },
    {
      "@id": "this:LinksPropertyShape",
      "@type": "sh:PropertyShape",
      "path": "nxv:links",
      "name": "Links",
      "description": "Links towards related resources.",
      "node": "this:LinkShape"
    },
    {
      "@id": "this:LinkShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNode"
    }
  ]
}