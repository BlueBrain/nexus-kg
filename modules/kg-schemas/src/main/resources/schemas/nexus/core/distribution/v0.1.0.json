{
  "@context": [
    "{{base}}/contexts/nexus/core/schema/v0.1.0",
    {
      "this": "{{base}}/schemas/nexus/core/distribution/v0.1.0/shapes/"
    }
  ],
  "@type": "owl:Ontology",
  "imports": [
    "{{base}}/schemas/nexus/core/quantitativevalue/v0.1.0",
    "{{base}}/schemas/nexus/core/digest/v0.1.0"
  ],
  "shapes": [
    {
      "@id": "this:DistributionShape",
      "@type": "sh:NodeShape",
      "and":[
        {
          "or": [
            {
              "path": "schema:downloadURL",
              "name":"Download URL",
              "nodeKind": "sh:IRI",
              "minCount": 1,
              "maxCount": 1
            },
            {
              "path": "schema:accessURL",
              "name":"Access URL",
              "nodeKind": "sh:IRI",
              "minCount": 1,
              "maxCount": 1
            }
          ]
        },
        {
          "property": [
            {
              "path": "schema:contentSize",
              "node": "{{base}}/schemas/nexus/core/quantitativevalue/v0.1.0/shapes/PositiveQuantitativeValueShape",
              "maxCount": 1
            },
            {
              "path": "nxv:digest",
              "node": "{{base}}/schemas/nexus/core/digest/v0.1.0/shapes/DigestShape"
            },
            {
              "path": "schema:mediaType",
              "name":"Media type",
              "description":"The media value should starts with one of application|audio|font|image|message|model|multipart|text|video followed by / and then any Alphanumeric characters.",
              "comment":"The pattern used here is temporary and not complete. The media type values need to be taken from a controlled vocabulary: to be handled in a next iteration.",
              "datatype": "xsd:string",
              "sh:pattern":"^(application|audio|font|image|message|model|multipart|text|video)\/[A-Za-z0-9]+",
              "minCount": 1,
              "maxCount": 1
            }
          ]
        }
      ]
    }
  ]
}